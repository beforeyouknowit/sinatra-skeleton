<h1>Welcome to Ashley's ERB Message Board</h1>
<a href="/messages/new">Post a message... It's FREE!</a>
<% @messages.each do |message| %>
  <div class="message">
    <h3><%= message.title %> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
  </div>
<% end %>